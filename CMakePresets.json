{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 25,
    "patch": 0
  },
  "include": [
    "cmake/presets/LegacyPresets.json",
    "cmake/presets/VcpkgPresets.json",
    "cmake/presets/JarvisPresets.json"
  ],
  "configurePresets": [
    {
      "name": "debug",
      "inherits": ["dc-debug-vcpkg"],
      "binaryDir": "build-debug",
      "displayName": "Debug"
    },
    {
      "name": "release",
      "inherits": ["dc-release-vcpkg"],
      "binaryDir": "build-release",
      "displayName": "Release"
    },
    {
      "name": "debug-docker",
      "inherits": ["debug"],
      "binaryDir": "build-debug-docker",
      "displayName": "Debug [Docker]"
    },
    {
      "name": "release-docker",
      "inherits": ["release"],
      "binaryDir": "build-release-docker",
      "displayName": "Release [Docker]"
    }
  ],
  "buildPresets": [
    {
      "name": "build-debug",
      "displayName": "Build [Debug]",
      "configurePreset": "debug",
      "jobs": 0
    },
    {
      "name": "build-release",
      "displayName": "Build [Release]",
      "configurePreset": "release",
      "jobs": 0
    },
    {
      "name": "build-debug-docker",
      "displayName": "Build [Debug]",
      "configurePreset": "debug-docker",
      "jobs": 0
    },
    {
      "name": "build-release-docker",
      "displayName": "Build [Release]",
      "configurePreset": "release-docker",
      "jobs": 0
    }
  ],
  "testPresets": [
    {
      "name": "unit-tests",
      "hidden": true,
      "displayName": "Unit Tests",
      "filter": {
        "include": {
          "label": "Unit"
        }
      }
    },
    {
      "name": "run-unit-tests",
      "inherits": ["unit-tests"],
      "configurePreset": "debug"
    },
    {
      "name": "run-unit-tests-docker",
      "inherits": ["unit-tests"],
      "configurePreset": "debug-docker"
    }
  ]
}